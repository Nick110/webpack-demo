{
    "compilerOptions": {
        "module": "esnext",
        "target": "es6",
        "allowJs": true,
        "moduleResolution": "node",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
        }
    },
    "include": [
        "src/**/*",
        "declaration.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}